<body>

<!-- DIGITAL CLOCK -->
<div class="box">
    <h2>Digital Clock</h2>
    <div id="clock" class="time">00:00:00</div>
</div>

<!-- STOPWATCH -->
<div class="box">
    <h2>Stopwatch</h2>
    <div id="stopwatch" class="time">00:00:00</div>

    <button id="startBtn">Start</button>
    <button id="stopBtn" class="stop">Stop</button>
    <button id="resetBtn">Reset</button>
</div>

<!-- SET TIMEOUT DEMO -->
<div class="box">
    <h2>setTimeout Demo</h2>
    <p>Message will appear after 3 seconds...</p>
    <p id="timeoutMsg"></p>
</div>

<script>
    /* ---------------- DIGITAL CLOCK ---------------- */
    function updateClock() {
        let now = new Date();

        let h = now.getHours().toString().padStart(2, "0");
        let m = now.getMinutes().toString().padStart(2, "0");
        let s = now.getSeconds().toString().padStart(2, "0");

        document.getElementById("clock").textContent = `${h}:${m}:${s}`;
    }

    setInterval(updateClock, 1000);
    updateClock();

    /* ---------------- STOPWATCH ---------------- */
    let sec = 0, min = 0, hr = 0;
    let stopwatchInterval;

    function updateStopwatch() {
        sec++;
        if (sec == 60) { sec = 0; min++; }
        if (min == 60) { min = 0; hr++; }

        document.getElementById("stopwatch").textContent =
            `${hr.toString().padStart(2, "0")}:` +
            `${min.toString().padStart(2, "0")}:` +
            `${sec.toString().padStart(2, "0")}`;
    }

    document.getElementById("startBtn").onclick = function () {
        if (!stopwatchInterval) {
            stopwatchInterval = setInterval(updateStopwatch, 1000);
        }
    };

    document.getElementById("stopBtn").onclick = function () {
        clearInterval(stopwatchInterval);
        stopwatchInterval = null;
    };

    document.getElementById("resetBtn").onclick = function () {
        clearInterval(stopwatchInterval);
        stopwatchInterval = null;
        sec = 0; min = 0; hr = 0;
        document.getElementById("stopwatch").textContent = "00:00:00";
    };

    /* ---------------- SET TIMEOUT DEMO ---------------- */
    setTimeout(function () {
        document.getElementById("timeoutMsg").textContent =
            "Hello! This message appeared after 3 seconds.";
    }, 3000);
</script>

</body>
</html>
