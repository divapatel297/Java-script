<body>

    <div class="box">
        <h2>Unit Converter</h2>

        <input type="number" id="value" placeholder="Enter value">

        <select id="unitFrom">
            <option value="cm">Centimeter</option>
            <option value="m">Meter</option>
            <option value="km">Kilometer</option>
        </select>

        <select id="unitTo">
            <option value="cm">Centimeter</option>
            <option value="m">Meter</option>
            <option value="km">Kilometer</option>
        </select>

        <button onclick="convert()">Convert</button>

        <div class="result" id="output"></div>
    </div>

<script>

    // -------------------------------
    // GLOBAL VARIABLE EXAMPLE
    // -------------------------------
    let lastResult = 0;  // Global scope variable

    // -------------------------------
    // FUNCTION DECLARATION (with return)
    // Converts any unit to meter
    // -------------------------------
    function toMeter(value, fromUnit) {
        let meterValue = 0; // Local scope variable

        if (fromUnit === "cm") meterValue = value / 100;
        else if (fromUnit === "m") meterValue = value;
        else if (fromUnit === "km") meterValue = value * 1000;

        return meterValue; // returning function value
    }

    // -------------------------------
    // FUNCTION EXPRESSION
    // Converts meter to required unit
    // -------------------------------
    const fromMeter = function(value, toUnit) {
        if (toUnit === "cm") return value * 100;
        if (toUnit === "m") return value;
        if (toUnit === "km") return value / 1000;
    };

    // -------------------------------
    // ARROW FUNCTION
    // Show result on screen
    // -------------------------------
    const showResult = (convertedValue) => {
        document.getElementById("output").innerHTML =
            `Converted Value: <b>${convertedValue}</b>`;
    };

    // -------------------------------
    // MAIN CONVERSION FUNCTION
    // -------------------------------
    function convert() {
        let val = Number(document.getElementById("value").value);
        let fromUnit = document.getElementById("unitFrom").value;
        let toUnit = document.getElementById("unitTo").value;

        if (isNaN(val) || val <= 0) {
            document.getElementById("output").innerHTML = "Enter valid value!";
            return;
        }

        // Step 1: Convert to meter (function return)
        let meterValue = toMeter(val, fromUnit);

        // Step 2: Convert meter to target
        let finalValue = fromMeter(meterValue, toUnit);

        // Step 3: Use arrow function to display result
        showResult(finalValue);

        // Modify global variable
        lastResult = finalValue;
        console.log("Last result stored globally: ", lastResult);
    }

</script>

</body>
</html>
