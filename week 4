    <style>
        body {
            font-family: Arial, sans-serif;
            background: #111;
            color: #fff;
            text-align: center;
            padding-top: 40px;
        }

        .box {
            width: 350px;
            margin: auto;
            background: #1e1e1e;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(255,255,255,0.1);
        }

        select, input {
            width: 90%;
            padding: 12px;
            margin: 10px 0;
            border-radius: 10px;
            border: none;
            outline: none;
        }

        button {
            padding: 12px 30px;
            background: #00c853;
            color: white;
            border-radius: 10px;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background: #00a847;
        }

        .result {
            margin-top: 20px;
            background: #222;
            padding: 15px;
            border-radius: 10px;
            font-size: 20px;
        }
    </style>
