<h2>Simple Weather App</h2>

<input type="text" id="city" placeholder="Enter city name">
<button onclick="getWeather()">Get Weather</button>

<p id="result"></p>

<script>
function getWeather() {
    let city = document.getElementById("city").value;

    if (city === "") {
        alert("Please enter a city name");
        return;
    }

    // Public API URL
    let url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=5a36d2f9a6f6f03032956543c0cc7d53&units=metric`;

    // ------- MERGED fetch(), then(), catch() ----------
    fetch(url)
    .then(response => response.json())  
    .then(data => {
        if (data.cod === "404") {
            document.getElementById("result").textContent = "City not found!";
        } else {
            let temp = data.main.temp;
            let weather = data.weather[0].description;

            document.getElementById("result").textContent =
                `Temperature: ${temp}Â°C | ${weather}`;
        }
    })
    .catch(error => {
        document.getElementById("result").textContent =
            "Error fetching data!";
    });
    // -------------------------------------------------
}
</script>

